.titlebar
    height              titlebarHeight
    box-sizing          border-box
    background          #333
    color               #aaa
    font-size           13px
    padding-top         4px
    padding-left        70px
    padding-right       70px
    white-space         nowrap
    -webkit-app-region  drag
    position            static
    display             block

.titlebarPath
    color               #888

.titlebarDot
    color               #444
    position            relative
    bottom              1px

.titlebarVersion
    color               #555

