.main
    position            absolute
    bottom              0
    right               0
    left                0
    top                 titlebarHeight
    border-left         frameWidth solid frameColor
    border-right        frameWidth solid frameColor
    border-bottom       frameWidth solid frameColor
    overflow            auto
    pointer-events      auto
    -webkit-user-select text
    background          #222
    color               #aaa

#buffer
    position            absolute

