

::-webkit-scrollbar
    width                   8px
    height                  8px

::-webkit-scrollbar-thumb
    -webkit-border-radius:  4px
    border-radius:          4px
    background              #333

::-webkit-scrollbar-thumb:hover
    background              #666

::-webkit-scrollbar-corner
    background              #222

body
    background      #222
    color           #fff
    font-family     arial, helvetica, sans-serif
        
#scroll
    padding-top     24px
    padding-left    4px
    
span.line-span
    white-space     nowrap
    margin-top      7px

div.line-div
    // border          1px solid #313131
    width           100%
    padding-bottom  6px

img.appicon
    vertical-align  top
    width           48px
    height          48px

pre
    display         inline-block
    margin          0
    margin-left     7px
    margin-top      2px
    background      #181818
    border          1px solid #161616
    overflow        hidden
    padding         13px
    cursor          pointer
    border-radius   6px
    &:hover
        background  #111
        border      1px solid #666
    &.current
        background  #000
        border      1px solid #aaa
        
.line-span img:not(.appicon)
    margin          0
    margin-left     7px
    margin-top      2px
    cursor          pointer
    border-radius   6px
    border          1px solid transparent
    &:hover
        border      1px solid #000
    &.current
        border      1px solid #aaa
            
.info            
    color           #888
    margin-top      10px