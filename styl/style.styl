.line-div
    padding                 frameWidth
    padding-left            2 * frameWidth
    position                relative
                
span.line-span
    -webkit-app-region      no-drag
    white-space             nowrap
    margin-top              7px

img.appicon
    vertical-align          top
    width                   48px
    height                  48px

pre
    font-family             fontMono
    display                 inline-block
    margin                  0
    margin-left             7px
    margin-top              2px
    background              #000
    overflow                hidden
    padding                 13px
    cursor                  pointer
    border-radius           6px
            
.line-span img:not(.appicon)
    margin                  0
    margin-left             7px
    margin-top              2px
    cursor                  pointer
    border-radius           6px
    border                  1px solid transparent
    &:hover
        border              1px solid #000

.image
    max-width               85%
                
.current 
    background              #000
    border-top-right-radius 6px
    border-bottom-right-radius 6px
    & pre
        color               #fff
    & .line-span img:not(.appicon)
        border              1px solid #aaa

