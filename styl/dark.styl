#titlebar
    background          frameColor

.titlebar-name
    color               textActiveColor

.titlebar-version
    color               scrollColor

.titlebar-dot
    color               titleColor

#titlebar .winbutton
    color               textBlurColor
    &:active
        color           textFocusColor
        background-color titleRedColor
        &.gray
            background-color titleColor
    &:hover
        color           textFocusColor
    
