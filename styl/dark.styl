frameWidth          = 6px

preColor            = #000
bgColor             = #181818
frameColor          = #222
scrollHoverColor    = #b00
titleRedColor       = #f00
titleColor          = #333
scrollColor         = #444
textBlurColor       = #666
textActiveColor     = #999
textFocusColor      = #fff

frameBorder         = frameWidth solid frameColor

body
    background          frameColor
    color               textFocusColor

