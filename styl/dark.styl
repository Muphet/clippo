    color               #fff

.titlebar
    background          #333
    color               #aaa

.titlebarDot
    color               #444

.titlebarVersion
    color               #555

#main
    border-left         frameBorder
    border-right        frameBorder
    border-bottom       frameBorder
    
    background          #181818
    color               #aaa

pre
    background          #000

.current 
    background          #000
    & pre
        color           #fff
        
.current .image
.image:hover
