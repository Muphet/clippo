{
  "name": "clippo",
  "version": "1.1.3",
  "description": "Clipboard tool",
  "main": "js/main.js",
  "scripts": {
    "start": "electron js/main.js",
    "compile": "cp -r js css img *.html app",
    "install": "cd app && npm install",
    "clean": "rm -rf dist app/js app/img app/css app/*.html app/node_modules",
    "dist": "npm run clean && npm run compile && npm run install && build",
    "release": "build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monsterkodi/clippo.git"
  },
  "keywords": [
    "electron",
    "mac",
    "osx",
    "menu-bar",
    "tool",
    "copy",
    "paste",
    "clipboard",
    "pasteboard"
  ],
  "author": "monsterkodi",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/monsterkodi/clippo/issues"
  },
  "build": {
    "app-bundle-id": "net.monsterkodi.clippo",
    "app-category-type": "public.app-category.utilities",
    "asar": false,
    "osx": {
      "background": "build/background.png",
      "target": [
        "dmg"
      ],
      "contents": [
        {
          "x": 100,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 100,
          "y": 70,
          "type": "file"
        }
      ]
    }
  },
  "devDependencies": {
    "electron-builder": "next",
    "electron-prebuilt": "^1.1.1"
  },
  "dependencies": {
    "html-entities": "^1.2.0",
    "keycode": "^2.1.1",
    "lodash": "^4.12.0",
    "noon": "^1.0.8"
  }
}